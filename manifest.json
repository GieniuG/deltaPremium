{
    "manifest_version": 3,
    "version": "2.3.3",
    "name": "DeltaPremium",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "64": "./icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://delta.pk.edu.pl/*"
            ],
            "js": [
                "./src/js/util.js",
                "./src/js/content.js"
            ],
            "css": [
                "./src/css/content.css"
            ]
        },
        {
            "matches": [
                "*://learningapps.org/*"
            ],
            "all_frames": true,
            "js": [
                "./src/js/util.js",
                "./src/js/lr.js",
                "./src/js/functions/cardFunctions.js",
                "./src/js/functions/quizFunctions.js",
                "./src/js/functions/crosswordFunctions.js",
                "./src/js/functions/oppositesFunctions.js"
            ],
            "css": [
                "./src/css/helpers.css"
            ]
        }
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "./src/html/popup.html"
    },
    "background": {
        "service_worker": "./src/js/service-worker.js",
        "scripts": [
            "./src/js/service-worker.js"
        ],
        "type": "module"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "deltaPremium@torus.uck.pk.edu.pl"
        }
    }
}
