{
    "manifest_version": 3,
    "version": "2.1",
    "name": "DeltaPremium",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "48": "./media/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://delta.pk.edu.pl/*"
            ],
            "js": [
                "./src/js/content.js"
            ]
        },
        {
            "matches": [
                "*://learningapps.org/*"
            ],
            "all_frames": true,
            "js": [
                "./src/js/lr.js",
                "./src/js/functions/cardFunctions.js",
                "./src/js/functions/quizFunctions.js",
                "./src/js/functions/crosswordFunctions.js",
                "./src/js/functions/oppositesFunctions.js"
            ],
            "css": [
                "./src/css/helpers.css"
            ]
        }
    ],
    "action": {
        "default_popup": "./src/html/popup.html"
    },
    "background": {
        "service_worker": "./src/js/service-worker.js"
    }
}

